generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(uuid())
  username    String   @unique
  password    String
  email       String   @unique
  rootFolders Folder[]
  files       File[]
}

model Folder {
  id             String   @id @default(uuid())
  owner          User?    @relation(fields: [ownerId], references: [id])
  name           String
  parentFolder   Folder?  @relation("folders", fields: [parentFolderId], references: [id], onDelete: Cascade)
  files          File[]
  subFolders     Folder[] @relation("folders")
  ownerId        String?
  parentFolderId String?
  date           DateTime
}

model File {
  id      String   @id @default(uuid())
  owner   User     @relation(fields: [ownerId], references: [id])
  name    String
  addedTo Folder[]
  ownerId String
  date    DateTime
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}
